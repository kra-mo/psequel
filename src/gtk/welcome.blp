using Gtk 4.0;
using Gio 2.0;
using Adw 1;

template $SequelizeConnectionView : Adw.Bin {
    hexpand: true;
    vexpand: true;

    Gtk.Paned paned {
        // can-shrink: false;
        shrink-start-child: false;
        resize-start-child: false;


        [start]
        $SequelizeConnectionSidebar sidebar {
            width-request: 320;
            form: form;
        }

        [end]
        $SequelizeConnectionForm form {
            sidebar: sidebar;
        }
    }

}