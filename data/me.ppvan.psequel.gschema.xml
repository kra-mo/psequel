<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="psequel">
	<schema id="me.ppvan.psequel" path="/me/ppvan/psequel/">
        <key name="data" type="s">
            <default>""</default>
            <summary>Application data</summary>
            <description>
                Application additional data. Should not be changed by user.
                Format: JSON.
            </description>
        </key>

        <key name="window-width" type="i">
            <default>1200</default>
            <summary>Window width</summary>
            <description>
                Saved window width.
            </description>
        </key>

        <key name="window-height" type="i">
            <default>900</default>
            <summary>Window height</summary>
            <description>
                Saved window height.
            </description>
        </key>

        <key name="query-limit" type="i">
            <default>200</default>
            <summary>Select query limit</summary>
            <description>
                The limit of select query in the query, get 500 rows max for each query
            </description>
        </key>

        <key name="query-timeout" type="i">
            <default>5</default>
            <summary>Time out before cancel a statement</summary>
            <description>
                If query's time is larger than this value (in seconds), application will cancel it.
            </description>
        </key>

        <key name="connection-timeout" type="i">
            <default>5</default>
            <summary>Timeout for connect to database</summary>
            <description>
                If time to connect to database is larger than this value (in seconds), application will cancel it.
            </description>
        </key>

        <key name="editor-font" type="s">
            <default>"Source Code Pro 12"</default>
            <summary>UI font</summary>
            <description>
                Application UI font.
            </description>
        </key>

        <key name="color-scheme" type="s">
            <default>"Adwaita"</default>
            <summary>Editor color scheme</summary>
            <description>
                Editor color scheme supported by Gtk Source View 5
            </description>
        </key>

	</schema>
</schemalist>
